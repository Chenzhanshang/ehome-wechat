/* pages/main/activity/activity.wxss */
.announcement-box{
  margin: 5px 10px;
}

.announcement-bar{
  display: flex;
  flex-direction: row;
}

.announcement-bar-img-right{
  width: 50rpx;
  height: 50rpx;
}

.activity-img{
  width: 40rpx;
  height: 40rpx;
}

.announcement-text{
  display: flex;
  flex: 1;
}

.announcement-bar-img{
  width: 70rpx;
  height: 50rpx;
}

.announcement-content-box{
  display: flex;
  flex-direction: row;
  height: 80px;
  align-items: center;
}

.announcement-content-left{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #eee;
  border-radius:5px; 
  margin-right: 5px;
}

.notice-img{
  width: 120rpx;
  height: 120rpx;
  border-radius:5px; 
}


.announcement-content-mid{
  width: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.announcement-title{
  margin-bottom: 15px;
}

.announcement-date{
   color: #999;
  font-size: 12px;
}

.announcement-content-right{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items:center;

  align-content: center;
  justify-content: center;

}

.announcement-tag{
  border: 1px solid #4579b2;
  color: #fff;
  font-size: 13px;
  border-radius: 5px;
  background: #4579b2;
   margin-bottom: 10px;
}

.replenish-mid{
  width:100%;
  height: 2px;
  background-color: #eee;
}