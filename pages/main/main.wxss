page{
  width: 100%;
  height: 100%;
}
.main-view{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  
}
.top-box{
  margin-top:5px; 
  padding-top: 5px;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
  background: #fff;
  align-content: center;
}
.text-top{
  font-size:18px; 
  margin-left: 5px;
}
.img-view-top-left{
  display: flex;
  height: 100%;
  margin-left: 10px;
  padding-top: 2px;
}
.img-top-left{
  width: 45rpx;
  height: 45rpx;
  
}
.main-fun-box{
  background: #eee;
  display: flex;
  width: 100%;
  height: 320rpx;
  justify-content: center;
}
.fun-box{
  width:95%;
  height: 290rpx;
  border: 2px solid #eee;
  border-radius: 10px;
  margin: 5px;
  background: #fff;
  
}
.img-box-view{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top: 5px;
  
}
.img-box-text-view{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-bottom: 5px;
}
.img-box{
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #fff;
  border-radius: 5px;
}
.fun-box-top{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.fun-box-bot{
  display: flex;
  flex-direction: row;
}
.fun{
  flex: 1;
}
.announcement-bar{
  display: flex;
  flex-direction: row;
}
.announcement-text{
  display: flex;
  flex: 1;
}
.announcement-title{
  margin-bottom: 15px;
}

.announcement-bar-img{
  width: 70rpx;
  height: 50rpx;
}
.announcement-bar-img-right{
  width: 50rpx;
  height: 50rpx;
}
.announcement-content-box{
  display: flex;
  flex-direction: row;
  height: 80px;
  align-items: center;
}
.announcement-content-left{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #eee;
  border-radius:5px; 
  margin-right: 5px;
}
.announcement-content-right{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items:center;

  align-content: center;
  justify-content: center;

}
.announcement-content-mid{
  width: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}





.activity-bar{
  display: flex;
  flex-direction: row;
}
.activity-text{
  display: flex;
  flex: 1;
}

.activity-bar-img{
  width: 70rpx;
  height: 50rpx;
}
.activity-img{
  width: 40rpx;
  height: 40rpx;
}

.activity-content-box{
  display: flex;
  flex-direction: row;
  height: 80px;
  align-items: center;
}
.activity-content-left{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #eee;
  border-radius:5px; 
  margin-right: 5px;
}
.activity-content-right{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items:center;

  align-content: center;
  justify-content: center;

}
.activity-content-mid{
  width: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.announcement-box{
  margin: 5px 10px;
}
.activity-box{
  margin: 5px 10px;
}
.activity-date{
  color: #999;
  font-size: 12px;
}
.announcement-date{
   color: #999;
  font-size: 12px;
}
.announcement-tag{
  border: 1px solid #4579b2;
  color: #fff;
  font-size: 13px;
  border-radius: 5px;
  background: #4579b2;
   margin-bottom: 10px;
}
.activity-title{
  margin-bottom: 10px;
}
.activity-tag{
  border: 1px solid #4579b2;
  color: #fff;
  font-size: 13px;
  border-radius: 5px;
  background: #4579b2;
  margin-bottom: 10px;
}
.fun-text{
  color: #999;
