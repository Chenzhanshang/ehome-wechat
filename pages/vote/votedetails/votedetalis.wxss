page{
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
  height: 100%;
}
.main-box{
  width: 100%;
  height: 100%;
}
.top-box{
  width: 100%;
}
.title{
  width: 100%;
  text-align: center;
  font-size: 20px;
  margin: 5px;
}
.top-left{
  flex: 1;
  text-align: left;
  margin-left: 10px;
  color: #999;
}
.top-right{
  flex: 1;
  text-align: right;
  margin-right: 10px;
  color: #999;
  
}
.img{
  margin-top: 5px;
  width: 32px;
  height: 32px;
}
.vote{
  align-items: center;
  height: 220px;
  
  flex: 1;
}
.vote-mid{
  text-align: center;
  font-size: 14px;
  color: #999;
}
.vote-item{
  width: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.column{
  width: 45px;
  background: forestgreen;
}
.vote-box{
  height: 100%;
  width: 95%;
  border: 1px solid #eee;
  border-radius: 20px;
  background: #eee;
}
.vote-big{
  margin-top: 20px;
  margin-bottom: 10px;
  justify-content: center;
}